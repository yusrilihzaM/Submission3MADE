    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragment.TvFragment">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
